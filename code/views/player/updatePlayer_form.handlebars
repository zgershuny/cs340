<div class="container">
  <div class="jumbotron">
    <h1><i class="fa fa-road" aria-hidden="true"></i> Update Player</h1>
    <p> Update Player's Info</p>
  </div>

    <form action="/updatePlayer_update" method="post">
      {{!-- HIDDEN ATTRIBUTES PKS/FKS --}}
      <input type="hidden" id="playerID" name="playerID" value="{{playerID}}">
      <table>
        {{!-- Player INFO --}}
        <div class="form-group">
          <label for="p_fName">First Name</label>
          <input type="text" class="form-control" name="p_fName" id="p_fName" value="{{p_fName}}" required>
        </div>
        <div class="form-group">
        <label for="p_lName">Last Name</label>
        <input type="text" class="form-control" name="p_lName" id="p_lName" value="{{p_lName}}" required>
        </div>
        {{!-- SUBMIT Changes --}}
        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
      </table>
    </form>
</div>