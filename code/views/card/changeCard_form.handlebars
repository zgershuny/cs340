<div class="container">
  <div class="jumbotron">
    <h1><i class="fa fa-road" aria-hidden="true"></i> Update Card</h1>
    <p> Update Card's Info - Year and Brand.</p>
  </div>

  {{!-- CITATION: https://getbootstrap.com/docs/4.0/components/forms/ --}}
  <form action="/changeCard_change" method="post">
    {{!-- HIDDEN ATTRIBUTES PKS/FKS --}}
    <input type="hidden" id="cardID" name="cardID" value="{{cardID}}">
    <table>
      {{!-- Card INFO --}}
      <div class="form-group">
        <label for="cardYear">Year</label>
        <input type="number" minlength="4" maxlength="4" class="form-control" name="cardYear" id="cardYear" value="{{cardYear}}" required>
      </div>
      <div class="form-group">
      <label for="cardBrand">Brand</label>
      <input type="text" class="form-control" name="cardBrand" id="cardBrand" value="{{cardBrand}}" required>
      </div>
      {{!-- SUBMIT Changes --}}
      <button type="submit" value="Submit" class="btn btn-primary">Update</button>
    </table>
  </form>
</div>
